{% extends "layout.njk" %}
{% block header %}
    <title>gym Manager - Instrutores</title>
{% endblock %}
{% block content %}
    <form class="card" method="post" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8325170/500x500) no-repeat"></section>
        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" placeholder="Nome">
                </div>
            </div>
            <div class="item">
                <div>Data Nascimento</div>
                <input type="date" name="birth">
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="degree">
                        <option value="Ensino Médio Completo" selected="selected">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="areas" placeholder="Coloque  os serviços separado com virgula">
                </div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="typeofclass" value="Presencial">Presencial</span>
                    <span><input type="radio" name="typeofclass" value="EAD">EAD</span>
                </div>
            </div>
            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock %}